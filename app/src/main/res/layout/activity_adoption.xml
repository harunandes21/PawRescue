<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adopt_background">



    <!-- Filter options -->
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >
            <!-- Location filter -->
            <Spinner
                android:id="@+id/locationSpinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <!-- Species filter -->
            <Spinner
                android:id="@+id/speciesSpinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Location filter -->
            <!-- Age filter -->
            <Spinner
                android:id="@+id/ageSpinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <!-- Health status filter -->
            <Spinner
                android:id="@+id/healthStatusSpinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <!-- In-app adoption application form -->

    <Button
        android:id="@+id/adoptButton"
        android:layout_width="112dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="61dp"
        android:background="@android:color/transparent"
         />

    <ImageView
        android:layout_marginTop="110dp"
        android:id="@+id/imageSearchButton"
        android:layout_width="91dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="154dp"
        android:layout_height="195dp"

        android:layout_marginLeft="130dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/back3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="261dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="430dp"
        android:text="NAME:\n\nAGE:\n\nLOCATION
                                  " />

    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:layout_marginTop="300dp"
        android:text="Button"
        />
    <Button
        android:id="@+id/buttonRight"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="330dp"
        android:text="Button"
        />

</RelativeLayout>
